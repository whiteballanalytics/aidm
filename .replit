modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "gitFull", "glibcLocales", "libiconv", "libxcrypt", "rustc"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DnD Server"

[[workflows.workflow]]
name = "DnD Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38273
externalPort = 3001

[[ports]]
localPort = 38839
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["python", "run_server.py"]
